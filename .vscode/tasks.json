{
 "version": "2.0.0",
 "tasks": [
  {
   "label": "build",
   "command": "dotnet",
   "type": "process",
   "args": [
    "build",
    "${workspaceFolder}/LearningWebSite/LearningWebSite.csproj",
    "/property:GenerateFullPaths=true",
    "/consoleloggerparameters:NoSummary"
   ],
   "problemMatcher": "$msCompile"
  },
  {
   "label": "publish",
   "command": "dotnet",
   "type": "process",
   "args": [
    "publish",
    "${workspaceFolder}/LearningWebSite/LearningWebSite.csproj",
    "/property:GenerateFullPaths=true",
    "/consoleloggerparameters:NoSummary"
   ],
   "problemMatcher": "$msCompile"
  },
  {
   "label": "watch",
   "command": "dotnet",
   "type": "process",
   "args": [
    "watch",
    "run",
    "--project",
    "${workspaceFolder}/LearningWebSite/LearningWebSite.csproj"
   ],
   "problemMatcher": "$msCompile"
  }
 ]
}