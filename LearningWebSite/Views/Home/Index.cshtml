<!----- Start course boxes ----->
<div class="container my-3">
    <div class="row">
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card custom-card mb-3" style="min-height:100%;">
                        <div class="sub-layer">
                            <img src="/CourseImage/CompressedImages/@item.CourseImageName" alt="@item.CourseTitle" class="img-fluid card-img-top">
                            <div class="over-layer">
                                <a href="/Course/@item.CourseId/@item.Slug" class="btn btn-primary"> مشاهده دوره </a>
                            </div>
                        </div>
                        <div class="card-body">
                            <a href="/Course/@item.CourseId/@item.Slug" class="card-link">@item.CourseTitle</a>
                        </div>
                        <div class="card-footer">
                            <div class="float-left">
                                @if (item.CoursePrice <= 0)
                                {
                                    <small class="text-success mr-2 ">رایگان</small>
                                }
                                else
                                {
                                    <small class="text-info mr-2 ">@item.CoursePrice.ToString("#,#") تومان</small>
                                }
                            </div>
                            <div class="float-right">
                                <span class="text-muted font-13 pull-right">@_courseService.GetTimeSpan(item.CourseId)</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
