@using LearningWebSite.Core.ViewModel.Users
@model ChangePasswordByUserViewModel
@{
    ViewData["Title"] = "ResetPassword";
}
<div class="container">
    <!----- Start forget password box ----->
    <div class="row d-flex justify-content-center">

        <div class="col-lg-7 col-xl-6 col-md-9 register">

            <div class="card my-5">

                <div class="card-body">
                    <h5 class="shadow-sm text-center mb-4 py-3">تغییر رمز عبور</h5>

                    <form action="/ResetPassword" method="post" asp-antiforgery="true">
                        <div class="text-danger" asp-validation-summary="All"></div>
                        <input hidden asp-for="UserId" value="@ViewBag.UserId"/>
                        <div class="form-group">
                            <label for="">کلمه عبور : </label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text  my-icon"> <i class="fa fa-user-plus align-middle"></i></span>
                                </div>
                                <input type="password" asp-for="Password" class="form-control" placeholder="کلمه عبور خود را وارد کنید ">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="">تکرار کلمه عبور : </label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text  my-icon"> <i class="fa fa-envelope align-middle"></i></span>
                                </div>
                                <input type="password" asp-for="RePassword" class="form-control" placeholder="تکرار کلمه عبور خود را وارد کنید">
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block rounded-pill custom-btn font-13 mt-4">تغییر رمز </button>

                    </form>

                </div>

            </div>
        </div>
    </div>
</div>

