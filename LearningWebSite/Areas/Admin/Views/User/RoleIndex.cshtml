@using LearningWebSite.DataLayer.Entities.Users
@{
    ViewData["Title"] = "مدیریت نقش کاربران";
}

<br />

<div class="card text-right">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h1 class="h5">لیست کاربر ها</h1>
    </div>
    <div class="card-body">
      

        <table class="table table-striped table-bordered">
            <tr>
                <th scope="col">ایمیل</th>
                <th scope="col"></th>
            </tr>
            @{
                var userdata = ViewBag.Model2 as List<CustomUser>;
            }
            @foreach (var item in userdata)
            {

                <tr>
                    <td>@item.Email</td>
                    <td class="text-center">

                        <a href="/RoleList/@item.Id" class="btn btn-success" >لیست نقش های کاربر</a>
                        <a href="/CreateRole/@item.Id" class="btn btn-primary" >افزودن نقش به کاربر</a>

                    </td>
                </tr>
            }
        </table>
        <nav aria-label="Page navigation example" dir="rtl">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
