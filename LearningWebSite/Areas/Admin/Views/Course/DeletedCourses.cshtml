@using LearningWebSite.DataLayer.Entities.Courses
@model List<Course>
@{
    ViewData["Title"] = "DeletedCourses";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
    int counter = 1;
}

<div class="row d-felx justify-content-center align-content-center align-items-center">
    <div class="col-10">

        <br>

        <div class="card text-right">
            <div class="card-body">
                <div class="row justify-content-around">
                    <div class="col-md-6">
                        <div class="collapse" id="frmFilter">
                            
                        </div>
                    </div>
                </div>

                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">تصویر</th>
                            <th scope="col">عنوان دوره</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr id="removeTr-@item.CourseId">
                                <td>
                                    @counter
                                </td>
                                <td>
                                    <img src="/CourseImage/thumb/@item.CourseImageName" class="img-thumbnail" style="max-height: 150px;max-width150px;" />
                                </td>
                                <td>
                                    @item.CourseTitle
                                </td>
                     
                            </tr>
                            counter++;
                        }
                    </tbody>
                </table>
                <hr />
            </div>
        </div>

    </div>
</div>

