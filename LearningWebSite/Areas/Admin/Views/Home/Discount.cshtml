@using LearningWebSite.Core.InfraStructure
@using LearningWebSite.DataLayer.Entities.Discounts
@model IList<Discount>
@{
    ViewData["Title"] = "کد های نحفیف";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}
<br />
<br />
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست کد های تخفیف</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card card-info">
            <div class="card-header">
                لیست کد های تخفیف
            </div>
            <!-- /.card-heading -->
            <div class="card-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a href="/Admin/Home/CreateDiscount" class="btn btn-outline-success">افزودن کد جدید</a>

                        </div>
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>کد</th>
                                    <th>تعداد</th>
                                    <th>درصد تخفیف</th>
                                    <th>تاریخ شروع</th>
                                    <th>تاریخ پایان</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    @foreach (var code in Model)
                                    {
                                        <tr id="removeTr-@code.DiscountId">
                                            <td>@code.DiscountId</td>
                                            <td>@code.DiscountCode</td>
                                            <td>@code.UsableCount</td>
                                            <td>%@code.DiscountPercent</td>
                                            <td>@((code.StartDate != null) ? code.StartDate.Value.ToShamsi() : "")</td>
                                            <td>@((code.EndDate != null) ? code.EndDate.Value.ToShamsi() : "")</td>

                                            <td>
                                                <a asp-area="Admin" asp-controller="Home" asp-action="EditDiscount" asp-route-discountId="@code.DiscountId" class="btn btn-warning btn-sm">
                                                    ویرایش
                                                </a>
                                                <button onclick="submitDeleteForm('/DeleteDiscount/',@code.DiscountId)" type="button" class="btn btn-outline-danger btn-sm">
                                                    <i class="fa fa-trash-o fa-fw"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col-lg-12 -->
</div>