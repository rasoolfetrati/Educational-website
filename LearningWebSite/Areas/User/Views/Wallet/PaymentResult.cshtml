@using LearningWebSite.Core.ViewModel.WalletVM
@model ShowWalletViewModel
@{
    ViewData["Title"] = "نتیجه پرداخت";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex flex-wrap align-items-center justify-content-center">
    <div class="col-6">
        <div class="row">

            <div class="card my-5 pb-4 text-right">
                <div class="card-header text-center">
                    <h6 class="mt-2"> @ViewBag.Message </h6>
                </div>
                <div class="card-body">
                    <div class="row">

                        <div class="col-12 col-md-6">
                            <div class="card mb-2">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <img src="/images/university-campus.png" class="img-fluid d-inline-block p-2 rounded bg-warning" alt="courses">
                                    <div class="d-inline-block text-center">
                                        <p class="mb-0"> بابت : @Model.Description  </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="card mb-2">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <img src="/images/a.png" class="img-fluid d-inline-block p-2 rounded bg-warning" alt="courses">
                                    <div class="d-inline-block text-center">
                                        <p class="mb-0"> شماره پیگیری :  @Model.Code  </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="card mb-2">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <img src="/images/shopping-cart.png" class="img-fluid d-inline-block p-2 rounded bg-warning" alt="courses">
                                    <div class="d-inline-block text-center">
                                        <p>  نتیجه پرداخت  </p>
                                        <p class="mb-0 @((Model.IsPay=="موفق")?"text-success":"text-danger")"> @Model.IsPay  </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="card mb-2">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <img src="/images/wallet-filled-money-tool.png" class="img-fluid d-inline-block p-2 rounded bg-warning" alt="courses">
                                    <div class="d-inline-block text-center">
                                        <p class="mb-0">مبلغ:  @Model.Amount تومان   </p>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
